.three_swiper .swiper_item {
  display: flex;
  height: 200px;
}
.three_swiper .swiper_item image {
  flex: 1;
  margin-right: 5px;
}
.three_swiper .swiper_item image:last-child {
  margin-right: 0;
}
.hidden {
  display: none;
}
.scrollTop {
  display: block;
}
.swiper-container {
  position: relative;
}
.swiper-container .swiper {
  height: 750rpx;
}
.swiper-container .swiper .img {
  width: 100%;
  height: 100%;
}
.swiper-container .dots {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 12rpx;
  display: flex;
  justify-content: center;
  height: 10rpx;
}
.swiper-container .dots .dot {
  margin: 0 5rpx;
  width: 12rpx;
  height: 8rpx;
  background: #fff;
  border-radius: 20rpx;
  transition: all 0.6s;
  opacity: 0.5;
}
.swiper-container .dots .dot.active {
  width: 22rpx;
  opacity: 1;
}
